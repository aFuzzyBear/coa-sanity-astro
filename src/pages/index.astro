---
import Layout from '../layouts/Layout.astro'
import FeaturedPost from '../components/FeaturedPost.astro'
import PostEntry from '../components/PostEntry.astro'
import Sidebar from '../components/Sidebar.astro'

import { client } from '../lib/sanityClient.js'
import { allPosts } from '../lib/queries.js'

const allPostData = await client.fetch(allPosts)
---
<Layout title="COA Astro">
	<div class="featured grid-wrapper grid-fourths">
		{allPostData && allPostData.slice(0, 4).map((article) => <FeaturedPost article={article} />)}
	</div>
	
	<div class="grid-wrapper grid-main">
		<div>
			<div class="content grid-wrapper grid-halves">
				{allPostData && allPostData.slice(4).map((article) => <PostEntry article={article} />)}
			</div>

		</div>
		<Sidebar />
	</div>
</Layout>